@model royectoInmobiliaria.net_MVC_.Models.Contrato

@{
    ViewData["Title"] = "Crear";
    var Inquilinos = (IList<Inquilino>)ViewBag.Inquilinos;
    var Inmuebles = (IList<Inmueble>)ViewBag.Inmuebles;
    var pagos = (IList<Pago>)ViewBag.Pagos;
}

<h1>Crear</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
               <input asp-for="FechaInicio" type="Date" class="form-control"asp-format="{0:yyyy-MM-dd}" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinalizacion" class="control-label"></label>
               <input asp-for="FechaFinalizacion" type="Date" class="form-control"  />
                 <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PagoId" class="control-label"></label>
                 <select class="form-control" asp-for="PagoId">
                    <option value="" disabled selected>Selecciones el Pago...</option>
                    @foreach (var pago in pagos)
                    {
                        <option value="@pago.PagoId">@pago.PagoId</option>
                    }
                </select>
               
                <span asp-validation-for="PagoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InmuebleId" class="control-label">Inmueble</label>
                <select class="form-control" asp-for="InmuebleId">
                    <option value="" disabled selected>Selecciones el Inmueble...</option>
                    @foreach (var inmueble in Inmuebles)
                    {
                        <option value="@inmueble.InmuebleId">@inmueble.Direccion</option>
                    }
                </select>
                <span asp-validation-for="InmuebleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InquilinoId" class="control-label">Inquilinos</label>
                <select class="form-control" asp-for="InquilinoId">
                    <option value="" disabled selected>Selecciones el Inquilino...</option>
                    @foreach (var inquilino in Inquilinos)
                    {
                        <option value="@inquilino.Id">@inquilino.Nombre @inquilino.Apellido</option>
                    }
                </select>
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Firmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

